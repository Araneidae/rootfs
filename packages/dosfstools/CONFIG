dosfstools_VERSION ?= 3.0.26

TAR_EXTENSION = .tar.gz
MD5_SUM_3.0.26 = b72d058c4ebc7b62dba68f93da358bfa

INSTALL_FILES = fatlabel fsck.fat mkfs.fat

build:
	CFLAGS='$(CFLAGS)' make -C $(O) -f $(srcdir)/Makefile \
            VPATH=$(srcdir)/src CC=$(CROSS_COMPILE)gcc

install:
	for f in $(INSTALL_FILES); do \
            $(install) -s -m-w $(O)/$$f /sbin; \
        done

# vim: set filetype=make:
