bash_VERSION ?= 3.2

TAR_EXTENSION = .tar.gz
MD5_SUM_3.2 = 00bfa16d58e034e3c2aa27f390390d30


config:
	cd $(O)  &&  \
        $(srcdir)/configure CFLAGS='$(CFLAGS)' \
            --host=$(COMPILER_PREFIX) --build=$(BUILD_TYPE)

build:
	make -C $(O)

install:
	$(install) -s -m-w $(O)/bash /bin

# EXTRA_LIBS = libdl
