#!/bin/sh

# Adds commands to be executed on initialisation.
#
# The environment variable sysroot must be set to point to the target rootfs.

if [ "$1" = -f ]; then
    shift
    for file; do
        cat file 
    done
else
    for arg; do
        echo "$arg"
    done
fi >>"$SYSROOT"/etc/first-time.sh
