#!/bin/sh

# Adds commands to be executed on initialisation.
#
# The following environment variable must be set:
#
: ${sysroot:?}      # Target rootfs, where to install files

if [ "$1" = -f ]; then
    shift
    for file; do
        cat file 
    done
else
    for arg; do
        echo "$arg"
    done
fi >>"$sysroot"/etc/first-time.sh
