# Definitions for cross compiling local files.
AS      = $(CROSS_COMPILE)as
LD      = $(CROSS_COMPILE)ld
CC      = $(CROSS_COMPILE)gcc
AR      = $(CROSS_COMPILE)ar
NM      = $(CROSS_COMPILE)nm
STRIP   = $(CROSS_COMPILE)strip
OBJCOPY = $(CROSS_COMPILE)objcopy
OBJDUMP = $(CROSS_COMPILE)objdump
CPP     = $(CC) -E


CFLAGS += -Werror -Wall -Wextra -Wno-unused-parameter -Wno-trigraphs
CFLAGS += -std=gnu99 -O2


%.s: %.c
	$(CC) $(CFLAGS) -S -o $@ $<
