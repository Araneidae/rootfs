include $(TOP)/COMMON

COMPONENT = $(notdir $(CURDIR))
ifndef $(COMPONENT)_VERSION
$(error Must specify $(COMPONENT)_VERSION)
endif

version = $($(COMPONENT)_VERSION)

TAR_FILE = $(COMPONENT)-$(version).tar.bz2
SOURCE_DIR_NAME = $(COMPONENT)-$(version)

srcdir = $(SOURCE_ROOT)/$(SOURCE_DIR_NAME)
O = $(BUILD_ROOT)/$(COMPONENT)/

MD5_SUM = $(MD5_SUM_$(version))

# This can be overridden if path name hacking is needed after running untar.
rename_source_dir = @:

install = $(scripts)install '$(COMPILER_PREFIX)'


